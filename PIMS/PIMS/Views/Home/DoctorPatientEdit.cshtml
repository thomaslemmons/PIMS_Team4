@model PIMS.Models.Patient
@{
    ViewData["Title"] = "Edit Page";
}

<style type="text/css">
    label {
        font-weight: bold;
        text-align: left;
    }

    hr {
        width: 100%;
    }
</style>

<h3 class="text-center">@Model.FirstName @Model.LastName</h3>
&nbsp;
@using (Html.BeginForm("DoctorPatientEdit", "Home", FormMethod.Post))
{
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" id="firstName" name="FirstName" value="@Model.FirstName">
        </div>
        <div class="form-group col-md-4">
            <label for="middleName">Middle Name</label>
            <input type="text" class="form-control" id="middleName" name="MiddleName" value="@Model.MiddleName">
        </div>
        <div class="form-group col-md-4">
            <label for="LastName">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="LastName" value="@Model.LastName">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="homePhone">Home Phone</label>
            <input type="text" class="form-control" id="homePhone" name="HomePhone" value="@Model.HomePhone">
        </div>
        <div class="form-group col-md-4">
            <label for="workPhone">Work Phone</label>
            <input type="text" class="form-control" id="workPhone" name="WorkPhone" value="@Model.WorkPhone">
        </div>
        <div class="form-group col-md-4">
            <label for="mobilePhone">Mobile Phone</label>
            <input type="text" class="form-control" id="mobilePhone" name="MobilePhone" value="@Model.MobilePhone">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="Address" value="@Model.Address">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" name="City" value="@Model.City">
        </div>
        <div class="form-group col-md-4">
            <label for="state">State</label>
            <input type="text" class="form-control" id="state" name="State" value="@Model.State">
        </div>
        <div class="form-group col-md-2">
            <label for="zipcode">Zipcode</label>
            <input type="text" class="form-control" id="zipcode" name="Zipcode" value="@Model.Zipcode">
        </div>
    </div>
    <hr />
    <label>Emergency Contact 1</label>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="ec1Name">Name</label>
            <input type="text" class="form-control" id="ec1Name" name="EC1Name" value="@Model.EC1Name">
        </div>
        <div class="form-group col-md-4">
            <label for="ec1Phone">Phone</label>
            <input type="text" class="form-control" id="ec1Phone" name="EC1Phone" value="@Model.EC1Phone">
        </div>
        <div class="form-group col-md-4">
            <label for="ec1Relationship">Relationship To Patient</label>
            <input type="text" class="form-control" id="ec1Relationship" name="EC1Relationship" value="@Model.EC1Relationship">
        </div>
    </div>
    <hr />
    <label>Emergency Contact 2</label>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="ec2Name">Name</label>
            <input type="text" class="form-control" id="ec2Name" name="EC2Name" value="@Model.EC2Name">
        </div>
        <div class="form-group col-md-4">
            <label for="ec2Phone">Phone</label>
            <input type="text" class="form-control" id="ec2Phone" name="EC2Phone" value="@Model.EC2Phone">
        </div>
        <div class="form-group col-md-4">
            <label for="ec2Relationship">Relationship To Patient</label>
            <input type="text" class="form-control" id="ec2Relationship" name="EC2Relationship" value="@Model.EC2Relationship">
        </div>
    </div>
    <hr />
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="admissionDate">Admission Date</label>
            <input type="text" class="form-control" id="admittanceDate" name="Admittance" value="@Model.Admittance">
        </div>
        <div class="form-group col-md-4">
            <label for="admissionTime">Admission Time</label>
            <input type="text" class="form-control" id="admittanceTime" name="Admittance" value="@Model.Admittance">
        </div>
        <div class="form-group col-md-4">
            <label for="admissionReason">Admission Reason</label>
            <input type="text" class="form-control" id="admittanceReason" name="AdmittanceReason" value="@Model.AdmittanceReason">
        </div>
    </div>
    <hr />
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="dischargeDate">Discharge Date</label>
            <input type="text" class="form-control" id="dischargeDate" name="Discharge" value="@Model.Discharge">
        </div>
        <div class="form-group col-md-4">
            <label for="dischargeTime">Discharge Time</label>
            <input type="text" class="form-control" id="dischargeTime" name="Discharge" value="@Model.Discharge">
        </div>
    </div>
    <hr />
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="familyDoctor">Family Doctor</label>
            <input type="text" class="form-control" id="familyDoctor" name="FamilyDoctor" value="@Model.FamilyDoctor">
        </div>
    </div>
    <hr />
    <label>Location</label>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="floorNumber">Floor</label>
            <input type="text" class="form-control" id="floorNumber" name="FloorNumber" value="@Model.FloorNumber">
        </div>
        <div class="form-group col-md-4">
            <label for="roomNumber">Room Number</label>
            <input type="text" class="form-control" id="roomNumber" name="RoomNumber" value="@Model.RoomNumber">
        </div>
        <div class="form-group col-md-4">
            <label for="bedNumber">Bed Number</label>
            <input type="text" class="form-control" id="bedNumber" name="BedNumber" value="@Model.BedNumber">
        </div>
    </div>
    <hr />
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="numberOfVisitors">Number Of Visitors</label>
            <input type="text" class="form-control" id="numberOfVisitors" name="NumberOfVisitors" value="@Model.NumberOfVisitors">
        </div>
    </div>
    <div class="form-group">
            <label for="approvedVisitors">Approved Visitors</label>
            <textarea class="form-control" id="approvedVisitors" name="ApprovedVisitors" rows="3">@Model.ApprovedVisitors</textarea>
    </div>
    <hr />
    <div class="form-group">
        <label for="doctorNotes">Doctor Notes</label>
        <textarea class="form-control" id="doctorNotes" name="DoctorNotes" rows="3">@Model.DoctorNotes</textarea>
    </div>
    <hr />
    <div class="form-group">
        <label for="prescriptions">Prescriptions</label>
        <textarea class="form-control" id="prescriptions" name="Prescriptions" rows="3">@Model.Prescriptions</textarea>
    </div>
    <hr />
    <div class="form-group">
        <label for="procedures">Scheduled Procedures</label>
        <textarea class="form-control" id="procedures" name="Procedures" rows="3">@Model.Procedures</textarea>
    </div>

    <input type="submit" class="btn btn-primary" value="Submit" />
}